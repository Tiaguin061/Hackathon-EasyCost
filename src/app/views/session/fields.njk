<div class="item">
    <div class="input">
        <input type="email"
        name="email"
        placeholder="Digite seu email"
        value="{{ user.email }}"
        onblur="Validate.apply(this, 'isEmail')">
    </div>
</div>

<div class="item">
    <div class="input">
        <input type="password"
        name="password"
        {% if not user.id %}
            placeholder="Escolha uma senha segura"
        {% else %}
            placeholder="Digite sua senha para atualizar seu cadastro!"
        {% endif %}
        >
    </div>
</div>
