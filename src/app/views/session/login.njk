{% extends "layout.njk" %}

{% block content %}

<section class="user-login container form">
    <div class="imgLogin">
        <img src="../../assets/login.svg" alt="">
        <div class="texts">
            <h1>Entrar na EasyCost</h1>
            <div>   
                <p>Bem vindo de volta.</p>
                <p>Faça seu login para dar continuidade na plataforma.</p>
            </div>
        </div>
    </div>
    <form method="POST" action="/users/login">
        <div class="header">
            <h3>Entrar</h3>
        </div>

        <div class="fields">
            {% include 'session/fields.njk' %}
            <button class="button" type="submit">
            Entrar
        </button>
            <div class="questionsAccounts">
                <a href="/">Esqueci a senha</a>
                <div>
                    <p>Não tem uma conta?</p>
                    <a href="/users/register">Registre-se</a>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock content %}
